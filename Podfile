# Uncomment the next line to define a global platform for your project
platform :ios, '9.0'

target 'Halo' do
  # Uncomment the next line if you're using Swift or would like to use dynamic frameworks
  # 注意使用 RAC 框架需要 use_frameworks!，因为 RAC 框架本身支持 Swift 而且 RAC 里面也含有 Swift 代码
  use_frameworks!

  # Pods for Halo
  # RAC 的 3.0 版本是支持 Swift 1.2 的
  # RAC 的 4.0 版本是支持 Swift 2.0 的
  # RAC 的 2.5 版本是不支持 Swift
  pod 'ReactiveCocoa', '~> 2.5'

end
